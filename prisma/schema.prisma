generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  HEADTEACHER
  TEACHER
  PARENT
}

enum StaffRole {
  NAUCZYCIEL
  INTENDENTKA
  SEKRETARKA
  POMOCNIK
}

enum ConsentType {
  IMAGE
  DATA
  MEDICAL
  MARKETING
}

enum ConsentStatus {
  ACCEPTED
  PENDING
  REJECTED
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  PENDING
}

enum AnnouncementCategory {
  WYJSCIE
  SPOTKANIE
  ORGANIZACYJNE
  FESTIWAL
  WYCIECZKA
  URODZINY
  PRZEDSTAWIENIE
  ZAJECIA
  INNE
}

enum DocumentStatus {
  AKTYWNY
  ARCHIWALNY
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskCategory {
  ADMINISTRACYJNE
  EDUKACYJNE
  TECHNICZNE
  INNE
}

enum RecruitmentStatus {
  PENDING
  VERIFIED
  ACCEPTED
  REJECTED
}

enum RoomStatus {
  AVAILABLE
  OCCUPIED
  MAINTENANCE
}

enum GalleryStatus {
  PUBLISHED
  DRAFT
  RESTRICTED
}

enum MessageStatus {
  SENT
  DELIVERED
  READ
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
  CANCELLED
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String
  surname       String
  phone         String?
  role          UserRole
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  children      Child[]   @relation("ParentChildren")
  staff         Staff?
  messagesSent Message[] @relation("SenderMessages")
  messagesReceived Message[] @relation("ReceiverMessages")
  announcements Announcement[]
  tasks         Task[]
  reports       Report[]

  @@map("users")
}

model Staff {
  id          String    @id @default(uuid())
  userId      String    @unique
  staffRole   StaffRole
  permissions String[] 
  groupId     String?   
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user        User      @relation(fields: [userId], references: [id])
  group       Group?    @relation(fields: [groupId], references: [id])

  @@map("staff")
}

model Group {
  id          String   @id @default(uuid())
  name        String
  ageRange    String   
  maxCapacity Int
  roomId      String?  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  room        Room?    @relation(fields: [roomId], references: [id])
  children    Child[]
  staff       Staff[]
  activities  Activity[]
  mealPlans   MealPlan[]
  announcements Announcement[]

  @@map("groups")
}

model Room {
  id          String   @id @default(uuid())
  name        String
  capacity    Int
  status      RoomStatus @default(AVAILABLE)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  groups      Group[]

  @@map("rooms")
}

model Child {
  id              String    @id @default(uuid())
  name            String
  surname         String
  dateOfBirth     DateTime
  parentId        String    
  groupId         String?   
  hasImageConsent Boolean   @default(false)
  hasDataConsent  Boolean   @default(false)
  allergies       String[]  @default([])
  specialNeeds    String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  parent          User      @relation("ParentChildren", fields: [parentId], references: [id])
  group           Group?    @relation(fields: [groupId], references: [id])
  attendances     Attendance[]
  activities      Activity[]
  pickupRecords   PickupRecord[]
  consents        Consent[]
  recruitmentApplication RecruitmentApplication?
  payments        Payment[]

  @@map("children")
}

model Attendance {
  id          String          @id @default(uuid())
  childId     String          
  date        DateTime
  status      AttendanceStatus @default(PRESENT)
  reason      String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  child       Child           @relation(fields: [childId], references: [id])

  @@index([childId, date])
  @@map("attendances")
}

model Activity {
  id          String    @id @default(uuid())
  groupId     String    
  childId     String?   
  date        DateTime
  title       String
  description String?
  activities  String[]  @default([]) 
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  group       Group     @relation(fields: [groupId], references: [id])
  child       Child?    @relation(fields: [childId], references: [id])

  @@map("activities")
}

model PickupRecord {
  id              String    @id @default(uuid())
  childId         String    
  pickupDate      DateTime
  pickupTime      DateTime
  authorizedPerson String
  verificationMethod String? 
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  child           Child     @relation(fields: [childId], references: [id])

  @@map("pickup_records")
}

model Consent {
  id          String        @id @default(uuid())
  childId     String        
  consentType ConsentType
  status      ConsentStatus @default(PENDING)
  date        DateTime      @default(now())
  expiryDate  DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  child       Child         @relation(fields: [childId], references: [id])

  @@map("consents")
}

model Message {
  id          String        @id @default(uuid())
  senderId    String        
  receiverId  String        
  subject     String
  body        String
  status      MessageStatus @default(SENT)
  isRead      Boolean       @default(false)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  sender      User          @relation("SenderMessages", fields: [senderId], references: [id])
  receiver    User          @relation("ReceiverMessages", fields: [receiverId], references: [id])

  @@map("messages")
}

model Announcement {
  id          String              @id @default(uuid())
  authorId    String              
  groupId     String?
  title       String
  content     String
  category    AnnouncementCategory
  eventDate   DateTime?           
  startTime   DateTime?
  endTime     DateTime?
  location    String?             
  targetGroup String?
  isImportant Boolean             @default(false)
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt

  author      User                @relation(fields: [authorId], references: [id])
  group       Group?              @relation(fields: [groupId], references: [id])
  readBy      AnnouncementRead[]  @relation("AnnouncementReads")

  @@map("announcements")
}

model AnnouncementRead {
  id             String       @id @default(uuid())
  announcementId String       
  userId         String       
  readAt         DateTime     @default(now())

  announcement   Announcement @relation("AnnouncementReads", fields: [announcementId], references: [id])

  @@index([announcementId, userId])
  @@map("announcement_reads")
}

model Document {
  id          String        @id @default(uuid())
  title       String
  description String?
  fileUrl     String
  status      DocumentStatus @default(AKTYWNY)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("documents")
}

model RecruitmentApplication {
  id                  String            @id @default(uuid())
  childId             String?           @unique 
  childName           String
  childSurname        String
  childAge            Int
  parentName          String
  parentEmail         String
  parentPhone         String
  applicationDate     DateTime          @default(now())
  status              RecruitmentStatus @default(PENDING)
  birthCertificate    Boolean           @default(false)
  medicalExamination  Boolean           @default(false)
  vaccinationCard     Boolean           @default(false)
  photos              Boolean           @default(false)
  notes               String?
  createdAt           DateTime          @default(now())
  updatedAt           DateTime          @updatedAt

  child               Child?            @relation(fields: [childId], references: [id])

  @@map("recruitment_applications")
}

model MealPlan {
  id          String    @id @default(uuid())
  groupId     String?   
  date        DateTime
  mealType    String    
  name        String
  description String?
  allergens   String[]  @default([])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  group       Group?    @relation(fields: [groupId], references: [id])

  @@map("meal_plans")
}

model Task {
  id          String        @id @default(uuid())
  assignedToId String       
  title       String
  description String?
  status      TaskStatus    @default(TODO)
  category    TaskCategory
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  assignedTo User           @relation(fields: [assignedToId], references: [id])

  @@map("tasks")
}

model Report {
  id          String   @id @default(uuid())
  authorId    String   
  title       String
  content     String
  reportType  String   
  periodStart DateTime?
  periodEnd   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author      User     @relation(fields: [authorId], references: [id])

  @@map("reports")
}

model Gallery {
  id                    String        @id @default(uuid())
  title                 String
  date                  DateTime
  status                GalleryStatus @default(DRAFT)
  childrenWithConsent   Int           @default(0)
  childrenWithoutConsent Int          @default(0)
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt

  photos                GalleryPhoto[]

  @@map("galleries")
}

model GalleryPhoto {
  id        String   @id @default(uuid())
  galleryId String   
  url       String
  caption   String?
  createdAt DateTime @default(now())

  gallery   Gallery  @relation(fields: [galleryId], references: [id])

  @@map("gallery_photos")
}

model Payment {
  id          String        @id @default(uuid())
  childId     String        
  amount      Float
  description String
  dueDate     DateTime
  paidDate    DateTime?
  status      PaymentStatus @default(PENDING)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  child       Child         @relation(fields: [childId], references: [id])

  @@map("payments")
}
